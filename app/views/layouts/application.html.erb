<!DOCTYPE html>
<html>
<head>
  <title>Session</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "//rawgithub.com/neves/9598842/raw/rails-scaffold-bootstrap.js" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/flash' %>

<% if usuario_logado %>
  <div class="pull-left">
    Bem Vindo
    <strong>
      <%= usuario_logado.email %>
    </strong>
  </div>
<% end %>

<div class="btn-group pull-right">
  <%= link_to_unless(logado?, 'login', login_path, class: 'btn btn-primary'){} %>
  <%= link_to_if(logado?, 'logout', logout_path, class: 'btn btn-danger'){} %>
</div>

<%= yield %>

</body>
</html>
